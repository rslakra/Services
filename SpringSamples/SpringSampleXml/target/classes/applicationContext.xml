<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="customerRepository"
		class="com.rslakra.dspringcore.repository.CustomerRepositoryImpl" />

	<!-- setter based injection. -->
	<!--bean name="customerService" class="com.rslakra.dspringcore.service.CustomerServiceImpl"> 
		<property name="customerRepository" ref="customerRepository" /> </bean -->

	<!-- Constructor Based Injection. -->
	<bean name="customerService"
		class="com.rslakra.dspringcore.service.CustomerServiceImpl">
		<constructor-arg index="0" ref="customerRepository" />
	</bean>


</beans>